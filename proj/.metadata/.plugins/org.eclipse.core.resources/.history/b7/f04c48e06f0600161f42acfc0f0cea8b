package blackjackG21;

import java.io.*;
import java.util.*;



public class Deck {
	LinkedList<Card> list;
	
	Deck(){
		list=new LinkedList<Card>();
	}
	
	public void populateDeck(String message){
		String name;
		String suit;
		String[] arr = message.split(" ");    
	   	 for ( String card : arr) {
	   	       System.out.println(card);
	   	      // this.addCard(ss);
	   	       
	   	    if(card.length()==2){/*all except 10's*/
				name=String.valueOf(card.charAt(0));
				switch(card.charAt(1)){
					case 'C': 
						suit="Clubs";
						break;
					case 'D': 
						suit="Diamonds";
						break;
					case 'S': 
						suit="Spades";
						break;
					case 'H': 
						suit="Hearts";
						break;
				}
				
			}
	   	  }
		
	}
	
	public void addCard(String ss){		
		list.addLast(new Card(ss));
	}
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
			Deck deck=new Deck();
			String line;
			
			try{
				 FileInputStream fileInputStream = new FileInputStream("src/shoe-file.txt");
			     InputStreamReader inputStreamReader = new InputStreamReader(fileInputStream);
			     
			     BufferedReader bufferedReader = new BufferedReader(inputStreamReader);
			     StringBuffer stringBuffer = new StringBuffer();
			     while ((line = bufferedReader.readLine()) != null) {
			    	 deck.populateDeck(line);
			     }
		     }catch(FileNotFoundException e){
		            e.printStackTrace();
		     }catch(IOException e){
		            e.printStackTrace();
		     } 
	}

}
