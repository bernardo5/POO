package blackjackG21;

public class Shoe {
	Deck[] decks;
	
	public Shoe(int numberDecks){
		decks=new Deck[numberDecks];
	}
	
	public Shoe(int numberDecks, Deck deck1,Deck deck2,Deck deck3,Deck deck4){
		this(numberDecks);
		decks[0]=deck1;
		decks[1]=deck2;
		decks[2]=deck3;
		decks[3]=deck4;
	}
	public Shoe(int numberDecks,Deck deck1,Deck deck2,Deck deck3,Deck deck4, Deck deck5){
			this(numberDecks,deck1,deck2,deck3,deck4);
			decks[4]=deck5;
	}
	public Shoe(int numberDecks,Deck deck1,Deck deck2,Deck deck3,Deck deck4, Deck deck5, Deck deck6){
		this(numberDecks,deck1,deck2,deck3,deck4, deck5);
		decks[5]=deck6;
	}
	public Shoe(int numberDecks,Deck deck1,Deck deck2,Deck deck3,Deck deck4, Deck deck5, Deck deck6, Deck deck7){
		this(numberDecks,deck1,deck2,deck3,deck4, deck5, deck6);
		decks[6]=deck7;
	}
	public Shoe(int numberDecks,Deck deck1,Deck deck2,Deck deck3,Deck deck4, Deck deck5, Deck deck6, Deck deck7, Deck deck8){
		this(numberDecks,deck1,deck2,deck3,deck4, deck5, deck6, deck7);
		decks[7]=deck8;
	}
	
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Shoe shoe=new Shoe(4, new Deck(),new Deck(),new Deck(),new Deck());
		System.out.println(shoe.toString());
		
		
		
		
		
		Deck deck=new Deck();
		String line;
		int lines=0;
		try{
			 FileInputStream fileInputStream = new FileInputStream("src/shoe-file.txt");
		     InputStreamReader inputStreamReader = new InputStreamReader(fileInputStream);
		     
		     BufferedReader bufferedReader = new BufferedReader(inputStreamReader);
		     StringBuffer stringBuffer = new StringBuffer();
		     while ((line = bufferedReader.readLine()) != null) {
		    	lines++;
		     }
	     }catch(FileNotFoundException e){
	            e.printStackTrace();
	     }catch(IOException e){
	            e.printStackTrace();
	     } 
		System.out.println(lines);
		
		
		
		
	}

}
